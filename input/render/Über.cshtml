</p>


<table class="table table-hover">
<thead>
  <th> Datei </th>
  <th> Public Domain status </th>
  <th> Uhrheber </th>
  <th> Lizenz </th>
  </thead>
  <tbody>
    @foreach(var doc in Documents["Write"])
    {
      var hasMetadata = false;
      bool? rightsReserved = null;
      string creator=null;
      string copyright=null;
      bool isImage = false;

   @if(null!=@doc.Get<bool?>("RightsReserved"))
      {
        hasMetadata = true;
        rightsReserved = doc.Get<bool?>("RightsReserved");
      }
      @if(!String.IsNullOrWhiteSpace(@doc.Get<string>("Creator")))
      {
        hasMetadata = true;
        creator = doc.Get<string>("Creator");
      }      
      @if(@doc.ContainsKey("Copyright"))
      {
        hasMetadata = true;
        @if(doc["Copyright"] is Object[])
        {
          copyright = (doc["Copyright"] as Object[])[0].ToString();
        } 
        else
        {
          @(copyright = doc["Copyright"].ToString());          
        }
      }

      
      var extension = System.IO.Path.GetExtension((string)@doc["TargetFile"]);
      
      @switch(extension)
      {
        case ".png":
          isImage=true;
          break;
      }
      
      @if(hasMetadata)
      {
        <tr>
          @if(isImage)
          {
            <td>
            <img class="img-responsive" src="@doc["TargetUrl"]" />
            </td>
          }                      
          else
          {
            <td>
            @doc["TargetUrl"]
            </td>
          }
          
          @if(rightsReserved.HasValue && !rightsReserved.Value)
          {
            <td>
            Public Domain
            </td>
          }
          else
          {
            <td>
            </td>
          }
          
          <td>
            @creator
          </td>
          <td>
             @(new HtmlString(copyright))
          </td>
                
        </tr>
        
      }

    }
  </tbody>           
</table>
